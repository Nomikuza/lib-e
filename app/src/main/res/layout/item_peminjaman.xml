<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="135dp">

    <ImageView
        android:id="@+id/container0"
        android:layout_width="395dp"
        android:layout_height="135dp"
        android:background="@drawable/container_bg"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />


    <TextView
        android:id="@+id/item_pjm_kdPjm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Kode Peminjaman #100"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/container0"
        app:layout_constraintTop_toTopOf="@+id/container0" />

    <TextView
        android:id="@+id/item_pjm_nim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:text="E41222345"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/container0"
        app:layout_constraintTop_toTopOf="@+id/container0" />

    <TextView
        android:id="@+id/item_pjm_tglPjm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:text="10 Nov, 2023"
        app:layout_constraintStart_toStartOf="@+id/container0"
        app:layout_constraintTop_toBottomOf="@+id/item_pjm_kdPjm" />

    <TextView
        android:id="@+id/item_pjm_status"
        android:layout_width="98dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/round_back_primary_15"
        android:text="Dikembalikan"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/container0"
        app:layout_constraintTop_toBottomOf="@+id/item_pjm_tglPjm" />

    <TextView
        android:id="@+id/item_pjm_tglPengembalian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:text="Terakhir 20 Nov, 2023"
        app:layout_constraintEnd_toEndOf="@+id/container0"
        app:layout_constraintTop_toBottomOf="@+id/item_pjm_nim" />

</androidx.constraintlayout.widget.ConstraintLayout>